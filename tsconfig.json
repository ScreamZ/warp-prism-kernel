{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": [
    "*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules/**",
    "**/*.spec.ts"
  ]
}
